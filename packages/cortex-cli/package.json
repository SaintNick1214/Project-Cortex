{
  "name": "@cortexmemory/cli",
  "version": "0.1.0",
  "description": "CLI tool for managing Cortex Memory deployments, performing administrative tasks, and streamlining development workflows",
  "type": "module",
  "bin": {
    "cortex": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "lint": "eslint . --report-unused-disable-directives",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js src/utils/__tests__",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "cortex",
    "memory",
    "ai",
    "convex",
    "cli",
    "admin",
    "database",
    "management"
  ],
  "author": "Saint Nick LLC",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/SaintNick1214/Project-Cortex.git",
    "directory": "packages/cortex-cli"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@cortexmemory/sdk": "^0.12.0",
    "commander": "^14.0.2",
    "prompts": "^2.4.2",
    "picocolors": "^1.1.1",
    "ora": "^9.0.0",
    "cli-table3": "^0.6.5",
    "cosmiconfig": "^9.0.0",
    "convex": "^1.30.0"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.4.6",
    "dotenv": "^17.2.3"
  }
}
